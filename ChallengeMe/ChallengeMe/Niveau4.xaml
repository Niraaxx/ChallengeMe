<Window x:Class="ChallengeMe.Niveau4"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChallengeMe"
        mc:Ignorable="d"
        Title="Niveau 4" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="445*"/>
            <ColumnDefinition Width="447*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Votre Score :" HorizontalAlignment="Right" Margin="0,23,49.6,0" VerticalAlignment="Top" Width="152" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontFamily="Stencil" FontSize="20" RenderTransformOrigin="-0.201,0.617" Grid.Column="1" Height="34"/>
        <Label Content="Pseudonyme :" HorizontalAlignment="Left" Margin="26,16,0,0" VerticalAlignment="Top" Width="152" FontFamily="Stencil" FontSize="20" RenderTransformOrigin="0.425,0.525" Height="34"/>
        <Label x:Name="pseudo" Content="" Margin="183,16,0,0" VerticalAlignment="Top" FontFamily="Stencil" FontSize="20" Height="34" Loaded="pseudoAfficher" HorizontalAlignment="Left" Width="145"/>
        <Label x:Name="scoring" Content="" Grid.Column="1" Margin="0,23,9.6,0" VerticalAlignment="Top" FontFamily="Stencil" FontSize="20" Loaded="scoreAfficher" HorizontalAlignment="Right" Width="40"/>
        <Label x:Name="titre_Copy" Content="Trouvez l'intrus présent dans cette suite " HorizontalAlignment="Center" Margin="0,80,0,0" VerticalAlignment="Top" FontSize="24" Grid.ColumnSpan="2" Width="460" Height="47" FontWeight="Bold"/>
        <TextBox Grid.ColumnSpan="2" HorizontalAlignment="Center" Height="213" Margin="0,0,0,10" TextWrapping="Wrap" Text="" VerticalAlignment="Bottom" Width="784" FontSize="16" IsEnabled="False" BorderBrush="#00ABADB3" Background="Transparent" SelectionBrush="#000078D7"/>
        <Button Content="B" Grid.Column="1" Margin="0,0,170,97" VerticalAlignment="Bottom" Click="changerNiveau" Background="#00DDDDDD" BorderBrush="#FF707070" Foreground="#00000000" Height="14" FontSize="14" HorizontalAlignment="Right" Width="12" Opacity="0"/>
    </Grid>

</Window>
